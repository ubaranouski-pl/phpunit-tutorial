{% extends 'base.html.twig' %}
{% block body %}
    <h1>Posts</h1>
    <table>
        <tbody>
           <tr>
               <th>ID</th>
               <th>Title</th>
               <th>Content</th>
               <th>Category</th>
           </tr>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.category }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
            </tr>
        {% endfor %}
            <tr>
                <td colspan="3"></td>
                <td id="total">{{ posts|length }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
